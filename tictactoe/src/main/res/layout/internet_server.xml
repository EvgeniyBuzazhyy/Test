<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:clipChildren="false"
    android:background="@drawable/fon2">


    <FrameLayout
        android:layout_width="280dp"
        android:layout_height="280dp"

        android:id="@+id/frame"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_alignWithParentIfMissing="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp">

        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/frameL1"
            android:layout_gravity="left|top"
            android:background="@drawable/bk11" >

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageView1"
                android:layout_gravity="center"
                android:onClick="onClick"
                android:padding="5dp"
                android:rotation="360" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/frameL2"
            android:layout_gravity="center_horizontal|top"
            android:background="@drawable/bk11" >

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageView2"
                android:layout_gravity="center"
                android:padding="5dp"
                android:onClick="onClick"

                android:longClickable="true" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/frameL3"
            android:layout_gravity="right|top"
            android:background="@drawable/bk11" >

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageView3"
                android:layout_gravity="center"
                android:onClick="onClick"
                android:padding="5dp"
                android:rotation="360"
                android:longClickable="true" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/frameL4"
            android:layout_gravity="left|center_vertical"
            android:background="@drawable/bk11" >

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageView4"
                android:layout_gravity="center"
                android:onClick="onClick"
                android:padding="5dp"
                android:rotation="360" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/frameL5"
            android:layout_gravity="center"
            android:background="@drawable/bk11" >

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageView5"
                android:layout_gravity="center"
                android:onClick="onClick"
                android:padding="5dp"
                android:rotation="360" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/frameL6"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/bk11" >

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageView6"
                android:onClick="onClick"
                android:layout_gravity="center"
                android:padding="5dp"
                android:rotation="360" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/frameL7"
            android:layout_gravity="left|bottom"
            android:background="@drawable/bk11" >

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageView7"
                android:layout_gravity="center"
                android:onClick="onClick"
                android:padding="5dp"
                android:rotation="360"
                android:longClickable="true" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/frameL8"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/bk11" >

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageView8"
                android:layout_gravity="center"
                android:onClick="onClick"
                android:padding="5dp"
                android:rotation="360"
                android:longClickable="true" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/frameL9"
            android:layout_gravity="right|bottom"
            android:background="@drawable/bk11">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageView9"
                android:onClick="onClick"
                android:layout_gravity="center"

                android:padding="5dp"
                android:rotation="360" />
        </FrameLayout>

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="#ff000000"
        android:textSize="20dp"
        android:text="Internet_Server"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/new_game"
        android:id="@+id/newGame"
        android:elevation="2dp"
        android:onClick="onClick"
        android:background="@drawable/button_background"
        android:textColor="#ffffffff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/whoNowPlays"
        android:layout_below="@+id/frame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:background="@drawable/who_play_frend" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chat"
        android:id="@+id/call_chat"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/text_who_play"
        android:textSize="20dp"
        android:layout_below="@+id/whoNowPlays"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
